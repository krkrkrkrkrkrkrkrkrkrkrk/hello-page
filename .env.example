# Server Configuration
PORT=6050

# SSL Configuration
SSL_KEY_PATH=/path/to/your/private.key
SSL_CERT_PATH=/path/to/your/certificate.crt

# Heartbeat Configuration
HEARTBEAT_INTERVAL=30000
HEARTBEAT_TIMEOUT=35000

# Validation Configuration
VALIDATION_URL=https://pandadevelopment.net/v2_validation

# Security Configuration
REQUIRE_SIGNATURE_VERIFICATION=false
SERVER_SECRET_KEY=server_secret_key_change_this_in_production

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_TIME_WINDOW=10000
RATE_LIMIT_BAN_THRESHOLD=3
RATE_LIMIT_BAN_DURATION=60000
